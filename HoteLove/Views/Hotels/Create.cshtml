<h1>Dodaj nowy Hotel</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" action="Create">
            <div class="form-group mb-3">
                <label class="control-label" for="Name">Nazwa Hotelu</label>
                <input class="form-control" type="text" id="Name" name="Name" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Location">Lokalizacja</label>
                <input class="form-control" type="text" id="Location" name="Location" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Description">Opis</label>
                <input class="form-control" type="text" id="Description" name="Description" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Price">Cena</label>
                <input class="form-control" type="text" id="Price" name="Price" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="PhoneNumber">Numer Telefonu</label>
                <input class="form-control" type="text" id="PhoneNumber" name="PhoneNumber" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Address">Adres</label>
                <input class="form-control" type="text" id="Address" name="Address" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Email">Email</label>
                <input class="form-control" type="text" id="Email" name="Email" />
            </div>
            <hr />
            <div class="form-group mb-3">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>